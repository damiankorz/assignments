@model UserViewModels
<h1>Wedding Planner</h1>
<div asp-validation-summary="All"></div>
<div id="login">
    <h2>Login</h2>
    <form asp-action="Login" asp-controller="User" method="post">
        <input asp-for="Login.LoginEmail" placeholder="Email">
        <input asp-for="Login.LoginPassword" placeholder="Password">
        <input type="submit" value="Login">
    </form>
</div><div id="registration">
    <h2>Register</h2>
    <form asp-action="Register" asp-controller="User" method="post">
        <input asp-for="Registration.FirstName" placeholder="First Name">
        <input asp-for="Registration.LastName" placeholder="Last Name">
        <input asp-for="Registration.Email" placeholder="Email">
        <input asp-for="Registration.Password" placeholder="Password">
        <input asp-for="Registration.ConfirmPassword" placeholder="Confirm Pasword">
        <input type="submit" value="Register">
    </form>
</div>