<h1>Reviews</h1>
<a href="/">Return Home</a>
@foreach(var review in ViewBag.allReviews)
{
    <h3>Review for: @review.RestaurantName - @review.Rating Stars</h3>
    <h4>Reviewer: @review.ReviewerName - @review.DateVisited.ToString("D")</h4>
    <p style="margin-left: 15px; padding-bottom: 10px; border-bottom: 1px solid silver;">@review.RestaurantReview</p>
}