@model ProductModels
<div class="banner">
    <img style="margin-left: 15px;" src="~/images/russia2018.png" alt="Russia 2018 Logo" height=100 width=100>
    <h1 style="display: inline-block;">Products</h1>
    <hr>
</div>
<div id="side_div">
    <h4 style="margin-bottom: 25px;">Add a new product</h4>
    <form asp-action="New" asp-controller="Product" method="post">
        <input asp-for="Product.ProductName" placeholder="Product Name">
        <input asp-for="Product.ImageURL" placeholder="Image URL">
        <textarea asp-for="Product.ProductDescription" style="padding: 5px;" cols="18" rows="10" placeholder="Product description..."></textarea>
        <label for="">Initial Quantity:</label>
        <select asp-for="Product.ProductQuantity" style="width: 125px; margin: 10px 0px;">
              @for(int i = 50; i < 1001; i+=50)
              {
                  <option>@i</option>
              }
        </select>
        <button class="form_button">Add</button>
    </form>
</div>
<div id="product_wrapper">
    <div asp-validation-summary="All" style="margin: 5px 0px 5px 15px;"></div>
    @foreach(Product item in Model.MultipleProducts)
    {
        <div class="product_display">
            <img src="@item.ImageURL" alt="Product Image" width=100 height=100>
            <h4>@item.ProductName</h4>
            <p>@item.ProductDescription</p>
            <p>(@item.ProductQuantity left)</p>
        </div>
    }
    @if(Model.MultipleProducts.Count < 13)
    {
    <a style="display: block; margin: 15px 0px;" class="links" href="/products/all">Show more...</a>
    }
</div>