<h1 style="display: inline-block; margin-right: 15px;">Lost in the Woods</h1>
<p style="display: inline-block;">List of local hiking trails</p>
<table>
    <thead>
        <tr>
            <th>Trail Name</th>
            <th>Trail Length</th>
            <th>Elevation Change</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var trail in ViewBag.AllTrails)
        {
            <tr>
                <td><a href="/trails/@trail.ID">@trail.Name</a></td>
                <td>@trail.Length Miles</td>
                <td>@trail.Elevation Feet</td>
            </tr>
        }
    </tbody>
</table>
<button type="button"><a style="color: black; text-decoration: none;" href="/trails/new">Add a New Trail</a></button>