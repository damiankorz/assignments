@model Forum.Models.UserLogin 
<div asp-validation-summary="All"></div>
<h1>Login</h1>
<form asp-action="Login" asp-controller="User" method="post">
    <input asp-for="LoginEmail" placeholder="Email">
    <input asp-for="LoginPassword" placeholder="Password">
    <input type="submit" value="Login">
</form>
<a href="/register">Don't have an account? Click here to register!</a>